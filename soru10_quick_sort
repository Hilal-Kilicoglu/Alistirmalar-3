def quick_sort(dizi):
    if len(dizi)<=1:
        return dizi
    else:
        k=int(len(dizi)/2)
        b=[]
        c=[]
        for i in range(0, len(dizi)):
            if dizi[i]<dizi[k]:
                b.append(dizi[i])
            else:
                if dizi[i]>dizi[k]:
                    c.append(dizi[i])
        return quick_sort(b)+[dizi[k]]+quick_sort(c)

siralanmamis_dizi=[10,6,-3,8,15,-7,4]
print(quick_sort(siralanmamis_dizi))
